{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"],
      "components/*": ["./src/components/*"],
      "icons/*": ["./src/icons/*"],
      "data/*": ["./src/data/*"],
      "hooks/*": ["./src/hooks/*"],
      "layout/*": ["./src/layout/*"],
      "constants/*": ["./src/constants/*"],
      "interfaces/*":["./src/interfaces/*"],
      "services/*":["./src/services/*"],
      "store/*": ["./src/store/*"],
      "scss/*": ["./src/scss/*"],
      "images/*": ["./public/*"],
      "fonts/*": ["./public/fonts/*"],
      "scss-components/*": ["./src/scss/components/*"],
      "schemas/*": ["./src/schemas/*"],
      "utils/*": ["./src/utils/*"],
      "lib/*": ["./src/lib/*"],
      "actions/*": ["./src/app/(server-actions)/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts", ".contentlayer/generated"],
  "exclude": ["node_modules"]
}
